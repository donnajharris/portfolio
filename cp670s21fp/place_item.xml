<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Reference: https://www.geeksforgeeks.org/cardview-in-android-with-example/ -->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <!-- WHOLE CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- LEFT SIDE CARD -->

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="3dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/place_list_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"

                        android:contentDescription="@string/list_layout_image_content_desc"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dine_around_grayscale_icon" />

                    <TextView
                        android:id="@+id/place_list_status_dot"

                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignTop="@id/place_list_photo"
                        android:layout_alignEnd="@id/place_list_photo"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"

                        android:background="@drawable/layout_rounded_status_dot_closing"

                        android:paddingLeft="3dp"
                        android:paddingTop="3dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="3dp"

                        />

                    <TextView
                        android:id="@+id/place_list_distance"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/place_list_photo"
                        android:layout_alignBottom="@id/place_list_photo"
                        android:layout_gravity="start"

                        android:background="@drawable/layout_rounded_distance"

                        android:paddingStart="4dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="4dp"
                        android:paddingBottom="3dp"

                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="112 km" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp">

                    <RatingBar
                        android:id="@+id/place_list_rating_bar"
                        style="@style/customRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"

                        android:isIndicator="true"
                        android:numStars="5"

                        android:progressBackgroundTint="@color/no_star"
                        android:progressTint="@color/gold_star"
                        android:secondaryProgressTint="@color/gold_star"

                        />

                    <TextView
                        android:id="@+id/place_list_no_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:paddingBottom="12dp"

                        android:gravity="center"

                        android:letterSpacing="0.15"
                        android:text="@string/unrated_label"
                        tools:text="Sem avaliação"


                        android:textAllCaps="true"
                        android:textColor="@color/unrated_text_color"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

            <!-- RIGHT SIDE CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/place_list_business_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_alignEnd="@id/favourite_marker"

                        android:layout_marginStart="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="32dp"

                        android:letterSpacing="0.05"
                        android:lineSpacingExtra="2dp"
                        android:textColor="?attr/colorPrimaryVariant"
                        android:textSize="24sp"

                        android:textStyle="normal"
                        tools:text="Business Name That is Really Long" />

                    <ImageView
                        android:id="@+id/favourite_marker"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="12dp"

                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/favourite_marker"
                        android:src="@drawable/ic_outline_favourite_border_24" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/place_list_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:background="@drawable/layout_rounded_category_restaurants"

                        android:letterSpacing="0.2"
                        android:paddingStart="5dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="5dp"

                        android:paddingBottom="3dp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"

                        tools:text="Restaurantes" />

                    <TextView
                        android:id="@+id/place_list_status"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="8dp"

                        android:letterSpacing="0.2"
                        android:paddingStart="5dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="5dp"

                        android:paddingBottom="3dp"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="Fecha em breve" />
                </LinearLayout>

                <TextView
                    android:id="@+id/place_list_address_string"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"

                    android:ellipsize="none"
                    android:lineSpacingExtra="2dp"

                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal"

                    tools:text="Address text goes here\nA second line"

                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>